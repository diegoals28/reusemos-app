# ============================================
# REUSA BACKEND - Environment Variables
# ============================================

# App
NODE_ENV=development
PORT=3000
# CORS: comma-separated list of allowed origins
# Development: http://localhost:3000,http://localhost:8081,http://localhost:19006
# Production: https://reusemos.cl,https://www.reusemos.cl,https://api.reusemos.cl
CORS_ORIGIN=http://localhost:3000,http://localhost:8081,http://localhost:19006

# Database
DATABASE_URL="postgresql://user:password@localhost:5432/reusa?schema=public"

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# Rate Limiting
THROTTLE_TTL=60000
THROTTLE_LIMIT=100

# Cloudinary (Image Upload)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# Mercado Pago
# Obtener credenciales en: https://www.mercadopago.com.ar/developers/panel/app
# Para sandbox (desarrollo): usar credenciales de prueba (TEST-xxx)
# Para producción: usar credenciales de producción (APP_USR-xxx)
MERCADOPAGO_ACCESS_TOKEN=TEST-0000000000000000-000000-00000000000000000000000000000000-000000000
MERCADOPAGO_PUBLIC_KEY=TEST-00000000-0000-0000-0000-000000000000
MERCADOPAGO_WEBHOOK_SECRET=your-webhook-secret

# URLs para callbacks de pago
APP_URL=reusemos://
API_URL=http://localhost:3000

# Firebase (Push Notifications)
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk@your-project.iam.gserviceaccount.com

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Apple OAuth
APPLE_CLIENT_ID=com.reusa.app
APPLE_TEAM_ID=your-team-id
APPLE_KEY_ID=your-key-id
APPLE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----"

# Email (Resend)
RESEND_API_KEY=re_xxxxxxxxxxxx
EMAIL_FROM=Reusemos <noreply@reusemos.cl>

# Chilexpress (Shipping)
# Para desarrollo usar: https://testservices.wschilexpress.com
# Para producción usar: https://services.wschilexpress.com
CHILEXPRESS_API_KEY=your-chilexpress-subscription-key
CHILEXPRESS_TCC=18578680  # Tarjeta Cliente Chilexpress (test: 18578680)
CHILEXPRESS_MARKETPLACE_RUT=96756430  # RUT Marketplace (test: 96756430)
