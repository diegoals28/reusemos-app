# ============================================
# REUSA BACKEND - Production Environment Variables
# ============================================
# Copy this file to .env.production and fill in the values

# App
NODE_ENV=production
PORT=3000

# CORS - List your production domains (comma-separated)
CORS_ORIGIN=https://reusemos.cl,https://www.reusemos.cl

# Database (use connection pooling in production)
DATABASE_URL="postgresql://user:password@host:5432/reusa?schema=public&connection_limit=10"

# JWT - IMPORTANT: Use strong, unique secrets in production
JWT_SECRET=<generate-a-strong-64-char-secret>
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# Rate Limiting
THROTTLE_TTL=60000
THROTTLE_LIMIT=100

# Cloudinary (Image Upload)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# Mercado Pago (Production credentials - APP_USR prefix)
MERCADOPAGO_ACCESS_TOKEN=APP_USR-xxx
MERCADOPAGO_PUBLIC_KEY=APP_USR-xxx
MERCADOPAGO_WEBHOOK_SECRET=your-webhook-secret

# URLs
APP_URL=https://reusemos.cl
API_URL=https://api.reusemos.cl

# Firebase (Push Notifications)
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk@your-project.iam.gserviceaccount.com

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Apple OAuth
APPLE_CLIENT_ID=com.reusa.app
APPLE_TEAM_ID=your-team-id
APPLE_KEY_ID=your-key-id
APPLE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----"

# Email (Resend)
RESEND_API_KEY=re_xxxxxxxxxxxx
EMAIL_FROM=Reusemos <noreply@reusemos.cl>

# Chilexpress (Shipping) - Production endpoints
CHILEXPRESS_API_KEY=your-production-subscription-key
CHILEXPRESS_TCC=your-tcc
CHILEXPRESS_MARKETPLACE_RUT=your-rut
